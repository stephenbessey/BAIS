{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "cd backend/production && uvicorn main_full:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  },
  "environments": {
    "production": {
      "variables": {
        "DATABASE_URL": "${{Postgres.DATABASE_URL}}",
        "REDIS_URL": "${{Redis.REDIS_URL}}",
        "BAIS_ENVIRONMENT": "production",
        "OAUTH_CLIENT_ID": "${{BAIS_OAUTH_CLIENT_ID}}",
        "OAUTH_CLIENT_SECRET": "${{BAIS_OAUTH_CLIENT_SECRET}}",
        "AP2_API_KEY": "${{BAIS_AP2_API_KEY}}",
        "AP2_SECRET_KEY": "${{BAIS_AP2_SECRET_KEY}}",
        "ENCRYPTION_KEY": "${{BAIS_ENCRYPTION_KEY}}"
      }
    }
  }
}
