# BAIS Backend Configuration


# Environment
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/bais_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# API Configuration
API_TIMEOUT_SECONDS=30
API_MAX_RETRIES=3
API_RETRY_DELAY_SECONDS=1
API_RATE_LIMIT_PER_MINUTE=100
API_MAX_REQUEST_SIZE_MB=10

# Security Configuration
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Monitoring Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# BAIS Configuration
BAIS_VERSION=1.0.0
SCHEMA_VALIDATION_ENABLED=true
MOCK_MODE=false
DEFAULT_BUSINESS_TYPE=hospitality

# AP2 (Agent Payments Protocol) Configuration
AP2_BASE_URL=https://ap2-network.example.com
AP2_CLIENT_ID=your-ap2-client-id
AP2_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour AP2 private key here\n-----END PRIVATE KEY-----
AP2_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nYour AP2 public key here\n-----END PUBLIC KEY-----
AP2_VERSION=1.0
AP2_TIMEOUT=30
AP2_RETRY_ATTEMPTS=3
AP2_RETRY_DELAY=1.0
AP2_DEFAULT_MANDATE_EXPIRY_HOURS=24
AP2_MAX_MANDATE_EXPIRY_HOURS=168
AP2_SUPPORTED_PAYMENT_METHODS=credit_card,debit_card,bank_transfer,digital_wallet
AP2_DEFAULT_CURRENCY=USD
AP2_VERIFICATION_REQUIRED=true
AP2_SIGNATURE_ALGORITHM=RS256
AP2_WEBHOOK_SECRET=your-webhook-secret
AP2_WEBHOOK_TIMEOUT=10
AP2_SANDBOX_MODE=false
AP2_MOCK_RESPONSES=false
