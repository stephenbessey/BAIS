# BA Integrate API - Production Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/baintegrate
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# API Configuration
API_ENV=production
API_VERSION=v1
API_HOST=0.0.0.0
API_PORT=8000

# Security
JWT_SECRET=your-super-secret-jwt-key-here-generate-with-openssl-rand-base64-32
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440
SECRET_KEY=your-secret-key-for-session-management

# OAuth Configuration
OAUTH_DISCOVERY_URL=https://oauth.baintegrate.com/.well-known/openid-configuration
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# CORS Configuration
ALLOWED_ORIGINS=https://baintegrate.com,https://www.baintegrate.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Authorization,Content-Type,X-Requested-With

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=200

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# Monitoring
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO
ENABLE_METRICS=true

# External Services
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# Feature Flags
ENABLE_DEMO_MODE=false
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_API_DOCS=true
